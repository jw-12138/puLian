.page {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100vh;
  background-repeat: no-repeat;
  background-position: center;
  background-size: cover;
  opacity: 0;
  pointer-events: none;
}

.page.on{
  opacity: 1;
  pointer-events: auto;
}

.redpack-wrap {
  overflow: hidden;
  width: 80vw;
  border-radius: 10px;
  box-shadow: 0 0 20px rgba(0, 0, 0, .1);
  position: relative;
  background-color: #fff;
  transition: width .3s ease, height .3s ease, border-radius .3s ease;
}

.redpack-wrap.on{
  width: 100%;
  height: 100% !important;
  border-radius: 0;
  box-shadow: none;
  pointer-events: none;
}

.top-half {
  height: 812px;
  width: 812px;
  border-radius: 812px;
  box-shadow: 0 0 10px rgba(0, 0, 0, .1);
  position: absolute;
  bottom: 20%;
  left: 50%;
  margin-left: -406px;
  z-index: 3;
  transition: bottom .3s ease;
}

.redpack-wrap.on .top-half{
  bottom: 93%;
  pointer-events: none;
}

.redpack-wrap.on .bottom-half{
  top: 110%;
  pointer-events: none;
}

.redpack-wrap.on .text{
  opacity: 0;
}

.text {
  position: absolute;
  width: 100%;
  color: #fdddab;
  font-size: 20px;
  text-align: center;
  z-index: 9;
  padding-top: 80px;
  transition: opacity .3s ease;
  opacity: 1;
  pointer-events: none;
}

.button {
  width: 80px;
  height: 80px;
  border-radius: 80px;
  background-color: #ebce9f;
  color: #333;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 40px;
  position: absolute;
  top: 70%;
  left: 50%;
  margin-left: -40px;
  z-index: 9;
  box-shadow: 0 5px 1px rgba(0, 0, 0, .1);
  transform: perspective(600px) rotateY(0deg);
  transition: opacity .3s ease;
}

.button.on {
  animation: spin 1s linear;
}

.button.off{
  opacity: 0;
}

@keyframes spin {
  0% {
    transform: perspective(600px) rotateY(0deg);
  }

  100% {
    transform: perspective(600px) rotateY(360deg);
  }
}

.bottom-half {
  height: 812px;
  width: 812px;
  border-radius: 812px;
  box-shadow: 0 0 10px rgba(0, 0, 0, .1);
  position: absolute;
  top: 65%;
  left: 50%;
  margin-left: -406px;
  z-index: 2;
  transition: top .3s ease;
}